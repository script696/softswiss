{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@app/*" : ["src/app/*"],
      "@widgets/*" : ["src/widgets/*"],
      "@features/*" : ["src/features/*"],
      "@pages/*" : ["src/pages/*"],
      "@shared/*" : ["src/shared/*"]
    },
    "noEmit": false,
    "noImplicitAny": true,
    "skipLibCheck": true,
    "module": "es2020",
    "target": "es5",
    "jsx": "react-jsx",
    "allowJs": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true
  },
  "ts-node": {
    "compilerOptions": {
      "module": "CommonJS"
    }
  },
  "include": ["src"]
}
